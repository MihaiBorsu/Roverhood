<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LogIn">

    <fragment
        android:id="@+id/RoverFeed"
        android:name="com.example.roverhood.RoverFeed"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/rover_feed">
        <action
            android:id="@+id/action_RoverFeed_to_LogIn"
            app:destination="@id/LogIn" />
        <action
            android:id="@+id/action_RoverFeed_to_loading"
            app:destination="@id/loading" />
    </fragment>
    <fragment
        android:id="@+id/LogIn"
        android:name="com.example.roverhood.LogIn"
        android:label="Log In"
        tools:layout="@layout/log_in">
        <action
            android:id="@+id/action_LogIn_to_loading"
            app:destination="@id/loading" />
    </fragment>
    <fragment
        android:id="@+id/loading"
        android:name="com.example.roverhood.Loading"
        android:label="RoverFeed"
        tools:layout="@layout/loading">
        <action
            android:id="@+id/action_loading_to_RoverFeed"
            app:destination="@id/RoverFeed" />
    </fragment>
</navigation>